[user]
  name = Yoshiyuki Ito
  email = thanks2music@gmail.com
[github]
  user = thanks2music
[credential]
  helper = osxkeychain
[core]
  editor = vim
  excludesfile = ~/.gitignore
  autocrlf = input             # CRLFを自動変換
[color]
  branch      = auto
  diff        = auto
  grep        = auto
  interactive = auto
  status      = auto
  ui          = auto
[alias]
  st = status
  sh = show
  so = remote show origin
  ft = fetch
  up = pull --rebase       # pull rebase
  rbm = rebase master      # masterへのrebaseはよく使うのでalias
  cm =  commit -m          # commit -m
  co = checkout
  cb = checkout -b         # ブランチ作ってチェックアウト
  com  = checkout master   # masterにチェックアウト
  up   = pull --rebase     # 最新にする
  # branch関連
  br = branch
  ba = branch -a           # originも含めた全てのbranchを表示
  bm = branch --merged     # merge済みのbranchを表示
  bn = branch --no-merged  # mergeしてないbranchを表示
  rup = remote prune origin # リモートの状態を再度取得
  current-branch = "!sh -c \"git branch | grep '*' | awk '{ print \\$2 }' \""
  p4r = "!sh -c 'git push origin HEAD:refs/for/master/`git current-branch`'"
  # log関連
  wc = whatchanged         # logに変更されたファイルも一緒に出す
  ls = log --stat          # logに変更されたファイルも一緒に出す
  lg   = log --graph --branches --date=short --decorate --pretty=format:'%C(yellow)%h %Cgreen%ad %Cblue%cn %Creset%s %C(magenta)%d'
  lp = log -p              # diffも一緒に出す
  la = log --pretty=\"format:%ad %h (%an): %s\" --date=short  # ざっくりログ出す
  lr = log origin          # originのlog
  tree = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  t = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  oneline = log --pretty=oneline
  ranking = shortlog -s -n --no-merges
  # logをtree表示
  log-graph = log --graph --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn %Creset%s'
  log-all = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'
  # Rebase関連
  rba  = rebase --abort
  rbc  = rebase --continue
  rbm  = rebase master
  ri5  = rebase -i HEAD~5
  ri10 = rebase -i HEAD~10
  ref  = reflog
  refa = reflog --all
  rl   = reflog
  rla  = reflog --all
  # rm 関係
  rmall = rm $(git ls-files --deleted) # deletedファイルを全て git rm
  # diff関連
  d  = diff
  dm = diff master           # masterとのdiff
  dw = diff --color-words
  ds = diff --staged
  dw = diff --color-words    # 単語単位でいろつけてdiff
  dc = diff --cached         # addされているものとのdiff
  ds = diff --staged         # 同上(1.6.1移行)
  d1 = diff HEAD~            # HEADから1つ前とdiff
  d2 = diff HEAD~~           # HEADから2つ前とdiff
  d3 = diff HEAD~~~          # HEADから3つ前とdiff
  d4 = diff HEAD~~~~         # HEADから4つ前とdiff
  d5 = diff HEAD~~~~~        # HEADから5つ前とdiff
  d10 = diff HEAD~~~~~~~~~~  # HEADから10前とdiff
  # Push
  push-for-review = "!sh -c 'git push origin HEAD:refs/for/master/`git current-branch`'"
  # Gerrit
  review = "!sh -c 'git push origin HEAD:refs/for/master/`git current-branch`'"
  # GitHub
  pr = !git push origin $(git current-branch)
  kokomade = tag -f 'ここまで読んだ' origin/master
  newspaper = log -p --reverse 'ここまで読んだ'..origin/master
  # mergeの際にconflictが起きたファイルを編集
  edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f`"
  # mergeの際にconflictが起きたファイルをadd
  add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
  # grep関連
  gg = git grep -n
  gr = grep
  gper = grep
  gn = grep -n
  # ranking
  ranking = shortlog -s -n --no-merges
[http]
  postBuffer = 524288000
[tig "bind"]
  generic = g move-first-line
  generic = G move-last-line
[push]
	default = simple
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /opt/homebrew-cask/Caskroom/sourcetree/2.0.4/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[merge]
	ff = false
[pull]
	ff = only
